  "description": "node.js web applications boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "nodemon ./ -e ejs,hbs,pug,js,css",
    "sass:watch": "sass --watch public/assets/scss:public/assets/css",
    "truncate": "node config/node truncate 1",
    "nodemon": "node core/Nodemon",
    "watch": "parallelshell \"node core/Nodemon\" \"npm run sass:watch\"",
    "sass:build": "node-sass -o resources/css resources/sass"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootstrap": "^4.1.3",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-handlebars": "^3.0.0",
    "handlebars": "^4.0.12",
    "http": "0.0.0",
    "module-alias": "^2.1.0",
    "mustache": "^3.0.0",
    "mustache-express": "^1.2.8",
    "normalize-port": "^1.0.0",
    "opn": "^5.4.0",
    "pug": "^2.0.3",
    "reload": "^2.3.1",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.4",
    "parallelshell": "^3.0.2",
    "webpack": "^4.20.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3"
  },
  "_moduleAliases": {
    "@app": ".",
    "@config": "config",
    "@core": "core",
    "@public": "src/foo",
    "@controllers": "app/controllers",
    "@models": "app/models",
    "@middlewares": "app/middlewares",
    "@routes": "app/routes",
    "@views": "app/views"
  }
